<% layout("/layouts/boilerplate.ejs")%>
<div class="row">
  <div class="offset-2 col-8">
  <h1>Create New Listing</h1>
  <form method="POST" novalidate class="needs-validation"  action="/listings">
    <div>
      <label for="title" class="form-label"  >Title</label>
    <input  class="form-control" type="text" required placeholder="enter title"  name="title">
    <div class="invalid-feedback">enter a title!</div>
    <div class="valid-feedback">ok!</div>
    </div>
    
    <br>

    <div>
      <label for="description" class="form-label">Description</label>
    <textarea class="form-control" required placeholder="enter description" name="description"></textarea> 
    <div class="invalid-feedback">enter description!</div>
    <div class="valid-feedback">ok!</div>
    </div>
    
    <br>

    <div>
      <label for="price" class="form-label">Price</label>
      <input  class="form-control" required type="number" placeholder="enter price" name="price">
      <div class="invalid-feedback">enter valid price!</div>
      <div class="valid-feedback">ok!</div>
    </div>
   
    <br>

    <div>
      <label for="image" class="form-label">Image</label>
      <input class="form-control"  type="text" placeholder="enter image link" name="image">
    </div>
    
    <br>

    <div>
      <label for="location" class="form-label">Location</label>
      <input class="form-control" required type="text" placeholder="enter location" name="location">
      <div class="invalid-feedback">enter location!</div>
      <div class="valid-feedback">ok!</div>
    </div>
   
    <br> 

    <div>
      <label for="country" class="form-label">Country</label>
      <input class="form-control"  required type="text" placeholder="enter country" name="country">
      <div class="invalid-feedback">enter country!</div>
      <div class="valid-feedback">ok!</div>
    </div>
   
    <br>
    <button class="btn btn-dark">Add</button>
    <br>
    <br>
  </form>
</div>
</div>